<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:clickable="true" />

    <TextView android:id="@+id/row_header"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/headingColour"/>
    <com.BoardiesITSolutions.NavigationDrawerManager.NavTextView
        android:id="@+id/row_textview"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:textColor="@color/navItemColor"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="72dp"
        android:background="?android:attr/selectableItemBackground"/>
    <EditText 
        android:id="@+id/row_edittext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:textColor="#ffffff" />
    
    <Button android:id="@+id/row_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="gone" />
    
    <Button android:id="@+id/row_button_borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle" />

    <Spinner 
        android:id="@+id/row_spinner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone"
        android:drawSelectorOnTop="true"
        android:contentDescription="Hello World"
        android:textColor="#ffffff" />

    <View
        android:id="@+id/row_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/dividerColour"
        android:visibility="gone"/>

</LinearLayout>